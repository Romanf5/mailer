.modal-wrp {
  position: fixed;
  top: 0
  left: 0
  z-index: 100;
  height 100vh;
  width 100vw
  background-color: rgba(0, 0, 0, 0.5);
  overflow: auto
}

.message-form {
  max-width: 1086px;
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%
  transform: translate(-50%, -50%);
  max-height: calc(100vh - 10px);
  overflow-y: auto;

  &__header {
    padding: 12px 20px;
    color: #fff;
    background-color: #444;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
  }

  &__body {
    background-color: #fff;
    padding-bottom: 15px;
  }

  &__headers {
    border-bottom: 1px solid #000;
  }

  &__controls {
    display: flex;
    width: 100%;
    justify-content: flex-end;
  }

  &__headers,
  &__content,
  &__controls{
    padding: 0 20px;
  }
}

.form-row {
  display: flex;
  align-items: center;
  padding: 12px 0;

  &__label {
    font-size: 13px;
    line-height: 1.15;
    color: #666666;
    min-width: 25px;
    flex-shrink: 0;
    margin-right: 43px;
    outline: none;

    &_hide{
      display: none;
    }
  }

  &__input {
    width: 100%;
    border: none;
    outline: none;

    &_textarea{
      resize: none;
      height 260px;
    }

    &::-webkit-input-placeholder {
      color: #434343;
    }

    &::-moz-placeholder {
      color: #434343;
    }

    &:-moz-placeholder {
      color: #434343;
    }

    &:-ms-input-placeholder {
      color: #434343;
    }
  }
}
