.search-panel {
  display: inline-block;
  position: relative
  max-width: 344px;
  width: 100%;

  &__input {
    padding: 10px 10px 10px 65px;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.2);
    border: none;
    outline: none;
    font-size: 16px;
    line-height: 1.19;
    color: #ffffff;
  }
}

.icon {
  position: absolute;
  top: 50%;
  font-size: 20px;
  color: #fff;
  transform: translateY(-50%);

  &--search {
    left: 14px;
  }

  &--micro {
    right: 14px;
  }
}

::-webkit-input-placeholder {color: #fff}
::-moz-placeholder          {color: #fff}
:-moz-placeholder           {color: #fff}
:-ms-input-placeholder      {color: #fff}
